{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
    // "moduleResolution": "node"
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "server/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
